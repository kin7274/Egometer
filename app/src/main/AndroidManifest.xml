<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elab_yang.egometer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--기본 장치 선택-->
        <activity
            android:name=".activity.DeviceScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!--메인-->
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--연결할 장치를 선택하시오-->
        <activity
            android:name=".activity.DeviceChoiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--선택1. 에르고미터 스캔-->
        <activity
            android:name=".activity.EGOScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!--선택2. 트레드밀 스캔-->
        <activity
            android:name=".activity.TREADScanActivIty"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!--운동부하검사-->
        <activity
            android:name=".LoadTestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />



        <activity
            android:name=".activity.getDBActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />




        <activity
            android:name=".TestStartBeforeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.IndoorBikeResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".IndoorBikeRealTimeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".BikeScanActivity" />

        <service
            android:name=".service.EZBLEService"
            android:enabled="true" />
    </application>
</manifest>