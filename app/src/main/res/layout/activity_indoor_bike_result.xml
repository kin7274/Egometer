<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--툴바-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/my_font_family"
            android:text="오늘의 운동량은- 띠리링"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="6">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="시간"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="평균속도"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_AvgSpeed"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="이동거리"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_Distance"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="평균BPM"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_AvgBPM"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="소모 칼로리"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_Kcal"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <!--운동 전 혈당-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="운동 전 혈당"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_before_bloodsugar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <!--운동 후 혈당-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:text="운동 후 혈당"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_after_bloodsugar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/my_font_family"
            android:padding="16dp"
            android:textColor="#000"
            android:textSize="20dp" />

    </GridLayout>

    <Button
        android:id="@+id/set_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/my_font_family"
        android:text="저장하기"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>