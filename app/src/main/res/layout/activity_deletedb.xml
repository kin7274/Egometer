<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/weaker_red"
    tools:context=".DeleteDataBaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_ergo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_only_right"
            android:fontFamily="@font/my_font_family"
            android:gravity="center_horizontal|center_vertical"
            android:text="에르고미터"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txt_tread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/my_font_family"
            android:gravity="center_horizontal|center_vertical"
            android:text="트레드밀"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fd0000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font_family"
            android:gravity="center_horizontal|center_vertical"
            android:text="주의! 모든 데이터가 지워집니다."
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>
